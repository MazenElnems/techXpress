@using PresentationLayer.VMs.ShoppingCart
@model ShoppingCartVM

@{
    ViewData["Title"] = "Cart";
}

<link rel="stylesheet" href="~/css/cart.css" />

<div class="container mx-auto mt-8 p-6 bg-white rounded-2xl shadow-lg">
    <h1 class="text-3xl font-bold mb-6 text-center">Your Shopping Cart</h1>

    @if (Model == null || Model.CartItems == null || !Model.CartItems.Any())
    {
        <div class="text-center text-gray-500">
            <p>Your cart is currently empty.</p>
            <div>
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Continue Shopping</a>
            </div>
        </div>
    }
    else
    {
        <section class="h-100 gradient-custom">
            <div class="container py-5">
                <div class="row d-flex justify-content-center my-4">
                    <div class="col-md-8">
                        <div class="card mb-4">
                            <div class="card-header py-3">
                                <h5 class="mb-0">Cart - @Model.CartItems.Count() items</h5>
                            </div>
                            <div class="card-body">
                                @foreach (var item in Model.CartItems)
                                {
                                    <!-- Single item -->
                                    <div class="row cart-item">
                                        <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                            <!-- Image -->
                                            <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                                                <img src="/Images/@item.ImageUrl" alt="@item.ProductName" class="w-100" />
                                            </div>
                                            <!-- Image -->
                                        </div>

                                        <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                            <!-- Data -->
                                            <p><strong>@item.ProductName</strong></p>
                                            <a class="btn btn-primary btn-sm me-1 mb-2" title="Remove item" asp-action="Remove" asp-controller="ShoppingCart" asp-route-id="@item.ProductId">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                            <!-- Data -->
                                        </div>

                                        <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                                            <!-- Quantity -->
                                            <div class="d-flex mb-4" style="max-width: 300px">
                                                <button class="btn btn-primary px-3 me-2"
                                                        onclick="this.parentNode.querySelector('input[type=number]').stepDown(); this.parentNode.querySelector('input[type=number]').dispatchEvent(new Event('change'));">
                                                    <i class="bi bi-dash"></i>
                                                </button>

                                                <div class="form-outline">
                                                    <input id="form1" min="0" name="quantity" value="1" type="number" class="form-control quantity-input" data-price="@item.Price" />
                                                    <label class="form-label" for="form1">Quantity</label>
                                                </div>

                                                <button class="btn btn-primary px-3 ms-2"
                                                        onclick="this.parentNode.querySelector('input[type=number]').stepUp(); this.parentNode.querySelector('input[type=number]').dispatchEvent(new Event('change'));">
                                                    <i class="bi bi-plus"></i>
                                                </button>
                                            </div>

                                            <p class="text-start text-md-center item-price">
                                                <strong>$@item.Price.ToString("F2")</strong>
                                            </p>
                                        </div>
                                    </div>
                                    <!-- Single item -->
                                    <hr class="my-4" />
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Summary Section -->
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-header py-3">
                                <h5 class="mb-0">Summary</h5>
                            </div>
                            <div class="card-body">

                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                        <div>
                                            <strong>Total Amount</strong>
                                        </div>
                                        <span id="cart-total"><strong>$@Model.Total.ToString("F2")</strong></span>
                                    </li>

                                </ul>

                                <button type="button" class="btn btn-primary btn-lg btn-block">
                                    Go to checkout
                                </button>

                                <a asp-action="Index" asp-controller="Home" class="btn btn-primary mt-2">Continue Shopping</a>
                            </div>
                        </div>
                    </div>
                    <!-- End Summary Section -->
                </div>
            </div>
        </section>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            const quantityInputs = document.querySelectorAll('.quantity-input');

            function updateTotals() {
                let overallTotal = 0;

                quantityInputs.forEach(input => {
                    const quantity = parseInt(input.value) || 0;
                    const unitPrice = parseFloat(input.getAttribute('data-price'));
                    const itemTotal = quantity * unitPrice;

                    const cartItemRow = input.closest('.cart-item');
                    const priceDisplay = cartItemRow.querySelector('.item-price strong');
                    if (priceDisplay) {
                        priceDisplay.textContent = '$' + itemTotal.toFixed(2);
                    }

                    overallTotal += itemTotal;
                });

                const totalEl = document.getElementById('cart-total').querySelector('strong');
                if (totalEl) {
                    totalEl.textContent = '$' + overallTotal.toFixed(2);
                }
            }

            quantityInputs.forEach(input => {
                input.addEventListener('change', updateTotals);
                input.addEventListener('input', updateTotals);
            });



        });

    </script>

}