@using PresentationLayer.VMs.Products
@model IEnumerable<ProductVM>

@{
    ViewData["Title"] = "Home";
}

<div class="container py-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-primary text-white py-3">
            <h4 class="mb-0">Featured Products</h4>
        </div>
        <div class="card-body p-4">
            <div class="row g-4">
                @foreach (var product in Model)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <div class="card h-100 shadow-sm rounded-3 border-0">
                            <div class="p-3 text-center">
                                <img src="/Images/@product.Image" class="img-fluid mb-3" style="height: 180px; object-fit: contain;">
                            </div>
                            <div class="card-body pt-0">
                                <h5 class="card-title text-center mb-2">@product.Name</h5>
                                <p class="text-muted text-center mb-3">$@product.Price.ToString("F2")</p>
                                <div class="d-grid">
                                    <a class="btn btn-outline-primary" asp-action="Details" asp-controller="Home" asp-route-id="@product.Id">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

