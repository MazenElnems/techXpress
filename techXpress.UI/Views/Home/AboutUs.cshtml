@{
    ViewData["Title"] = "About Us";
}

<link rel="stylesheet" href="~/css/About.css" />


<div class="container py-5">
    <!-- Hero Section -->
    <div class="about-hero">
        <h1>Welcome to techXpress</h1>
        <div class="underline"></div>
        <p>Your one-stop destination for top-tier tech products, exceptional support, and a seamless online shopping experience.</p>
    </div>

    <!-- Features Section -->
    <h2 class="text-center text-light mb-4">Why Choose Us</h2>
    <div class="underline mx-auto mb-5"></div>
    <div class="row g-4 mb-5">
        <div class="col-md-6 col-lg-3">
            <div class="feature-box">
                <div class="feature-icon">
                    <i class="bi bi-truck fs-3"></i>
                </div>
                <h4>Fast & Secure Delivery</h4>
                <p>We ensure rapid, tracked shipping so your orders arrive safely and on time.</p>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="feature-box">
                <div class="feature-icon">
                    <i class="bi bi-star fs-3"></i>
                </div>
                <h4>Curated Products</h4>
                <p>We handpick only the best tech gadgets and tools from trusted brands worldwide.</p>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="feature-box">
                <div class="feature-icon">
                    <i class="bi bi-shield-lock fs-3"></i>
                </div>
                <h4>Secure Shopping</h4>
                <p>With our secure payment and data encryption, your privacy is always protected.</p>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="feature-box">
                <div class="feature-icon">
                    <i class="bi bi-headset fs-3"></i>
                </div>
                <h4>24/7 Support</h4>
                <p>Our team is here anytime to help with your orders or product questions.</p>
            </div>
        </div>
    </div>

