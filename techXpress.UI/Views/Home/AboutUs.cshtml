@{
    ViewData["Title"] = "About Us";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

<style>
    .about-hero {
        background-color: #0f172a;
        padding: 5rem 2rem;
        text-align: center;
        color: #f8fafc;
    }

        .about-hero h1 {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 1rem;
            color: #facc15;
        }

        .about-hero p {
            font-size: 1.2rem;
            max-width: 800px;
            margin: 0 auto;
            color: #cbd5e1;
        }

    .about-features {
        background-color: #1e293b;
        padding: 4rem 2rem;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        color: #f1f5f9;
    }

    .feature-box {
        background-color: #0f172a;
        padding: 2rem;
        border-radius: 1rem;
        text-align: center;
        box-shadow: 0 0 15px rgba(0,0,0,0.4);
        transition: transform 0.3s ease;
    }

        .feature-box:hover {
            transform: translateY(-5px);
        }

        .feature-box i {
            font-size: 2.5rem;
            color: #facc15;
            margin-bottom: 1rem;
        }

        .feature-box h4 {
            font-size: 1.3rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .feature-box p {
            font-size: 1rem;
            color: #cbd5e1;
        }

    .about-footer {
        background-color: #0f172a;
        color: #94a3b8;
        padding: 3rem 2rem;
        text-align: center;
        font-size: 0.95rem;
    }
</style>

<!-- Hero Section -->
<div class="about-hero">
    <h1>Welcome to TechXpress</h1>
    <p>Your one-stop destination for top-tier tech products, exceptional support, and a seamless online shopping experience.</p>
</div>

<!-- Features Section -->
<div class="about-features container">
    <div class="feature-box">
        <i class="fas fa-shipping-fast"></i>
        <h4>Fast & Secure Delivery</h4>
        <p>We ensure rapid, tracked shipping so your orders arrive safely and on time.</p>
    </div>
    <div class="feature-box">
        <i class="fas fa-star"></i>
        <h4>Curated Products</h4>
        <p>We handpick only the best tech gadgets and tools from trusted brands worldwide.</p>
    </div>
    <div class="feature-box">
        <i class="fas fa-lock"></i>
        <h4>Secure Shopping</h4>
        <p>With our secure payment and data encryption, your privacy is always protected.</p>
    </div>
    <div class="feature-box">
        <i class="fas fa-headset"></i>
        <h4>24/7 Support</h4>
        <p>Our team is here anytime to help with your orders or product questions.</p>
    </div>
</div>

<!-- Footer Section -->
<div class="about-footer">
    &copy; @DateTime.Now.Year TechXpress. Empowering your digital lifestyle.
</div>
