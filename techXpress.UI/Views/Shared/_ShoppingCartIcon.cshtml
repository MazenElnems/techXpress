@using Microsoft.AspNetCore.Http
@using techXpress.UI.Extensions.Session

@{
    var cart = ViewContext.HttpContext.Session.Get<ShoppingCartVM>("Cart");
    var cartCount = cart?.CartItems?.Count ?? 0;
}


<div class="d-flex">
    <a class="btn btn-outline-dark" asp-action="ViewCart" asp-controller="ShoppingCart">
        <i class="bi-cart-fill me-1"></i>
        Cart
        <span class="badge bg-dark text-white ms-1 rounded-pill">@cartCount</span>
    </a>
</div>