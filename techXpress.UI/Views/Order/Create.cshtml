@using System.Security.Claims
@model CreateOrderActionRequest


<form asp-action="Create" asp-controller="Order" method="post">
    <input asp-for="UserId" type="hidden" value="@User.FindFirst(ClaimTypes.NameIdentifier)?.Value" />

    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="City" class="form-label"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RecipientPhoneNumber" class="form-label"></label>
        <input asp-for="RecipientPhoneNumber" class="form-control" />
        <span asp-validation-for="RecipientPhoneNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CouponId" class="form-label"></label>
        <input asp-for="CouponId" class="form-control" type="number" />
        <span asp-validation-for="CouponId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Order</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
