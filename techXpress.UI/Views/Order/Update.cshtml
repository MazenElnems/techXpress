@model UpdateOrderActionRequest

@{
    ViewData["Title"] = "Order Managment";
}

<div class="container py-5">
    <div class="card shadow-sm rounded-4 bg-dark text-light">
        <div class="card-header bg-dark-subtle text-white py-3 text-center">
            <h4 class="mb-0 fw-bold text-dark">Update Order</h4>
        </div>

        <div class="card-body">
            <form asp-action="Update" method="post" class="row g-4">
                <input type="hidden" value="@ViewBag.orderId" name="id" />

                <div class="col-md-6">
                    <label asp-for="OrderStatus" class="form-label fw-semibold"></label>
                    <select asp-for="OrderStatus" asp-items="ViewBag.OrderStatusOptions" class="form-select bg-dark text-light border-secondary">
                        <option value="">-- Select Status --</option>
                    </select>
                    <span asp-validation-for="OrderStatus" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ShippingDate" class="form-label fw-semibold"></label>
                    <input asp-for="ShippingDate" class="form-control bg-dark text-light border-secondary" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Carrier" class="form-label fw-semibold"></label>
                    <input asp-for="Carrier" class="form-control bg-dark text-light border-secondary" />
                </div>

                <div class="col-md-6">
                    <label asp-for="TrackingNumber" class="form-label fw-semibold"></label>
                    <input asp-for="TrackingNumber" class="form-control bg-dark text-light border-secondary" />
                </div>

                <div class="col-md-6">
                    <label asp-for="CouponId" class="form-label fw-semibold"></label>
                    <input asp-for="CouponId" class="form-control bg-dark text-light border-secondary" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Address" class="form-label fw-semibold"></label>
                    <input asp-for="Address" class="form-control bg-dark text-light border-secondary" />
                    <span asp-validation-for="Address" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="City" class="form-label fw-semibold"></label>
                    <input asp-for="City" class="form-control bg-dark text-light border-secondary" />
                    <span asp-validation-for="City" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="RecipientPhoneNumber" class="form-label fw-semibold"></label>
                    <input asp-for="RecipientPhoneNumber" class="form-control bg-dark text-light border-secondary" />
                    <span asp-validation-for="RecipientPhoneNumber" class="text-danger small"></span>
                </div>

                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-warning mt-4 px-4 fw-semibold">
                        <i class="bi bi-arrow-repeat"></i> Update Order
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm rounded-4 mt-5 bg-dark text-light">
        <div class="card-header bg-secondary text-white py-3">
            <h5 class="mb-0 fw-bold">Order Items</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-dark table-hover align-middle mb-0">
                    <thead class="table-secondary text-dark">
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderDetails)
                        {
                            <tr>
                                <td>@item.Product.Name</td>
                                <td>@item.Quantity</td>
                                <td>@item.UnitPrice.ToString("C")</td>
                                <td>@((item.Quantity * item.UnitPrice).ToString("C"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
