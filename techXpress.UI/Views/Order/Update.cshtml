@model UpdateOrderActionRequest

@{
    ViewData["Title"] = "Update Order";
}

<div class="container mt-5">
    <h2 class="mb-4">Update Order</h2>

    <form asp-action="Update" method="post" class="row g-3 needs-validation" novalidate>

        <input type="hidden" value="@ViewBag.orderId" name="id"/>

        <div class="col-md-6">
            <label asp-for="OrderStatus" class="form-label"></label>
            <select asp-for="OrderStatus" asp-items="ViewBag.OrderStatusOptions" class="form-select">
                <option value="">-- Select Status --</option>
            </select>
            <span asp-validation-for="OrderStatus" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="ShippingDate" class="form-label"></label>
            <input asp-for="ShippingDate" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="Carrier" class="form-label"></label>
            <input asp-for="Carrier" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="TrackingNumber" class="form-label"></label>
            <input asp-for="TrackingNumber" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="CouponId" class="form-label"></label>
            <input asp-for="CouponId" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="City" class="form-label"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="RecipientPhoneNumber" class="form-label"></label>
            <input asp-for="RecipientPhoneNumber" class="form-control" />
            <span asp-validation-for="RecipientPhoneNumber" class="text-danger"></span>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary mt-3">Update Order</button>
        </div>
    </form>

    <hr class="my-5" />
    <h4>Order Items</h4>
    <div class="table-responsive">
        <table class="table table-bordered table-hover mt-3">
            <thead class="table-light">
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderDetails)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.UnitPrice.ToString("C")</td>
                        <td>@((item.Quantity * item.UnitPrice).ToString("C"))</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
