@using techXpress.UI.VMs.User
@model UpdateUserRoleVM

@{
    ViewData["Title"] = "Update User Roles";
}

<div class="container py-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
            <h4 class="mb-0 fw-bold">Update User Roles</h4>
            <div>
                <a asp-action="Index" asp-controller="User" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left"></i> Back To Users
                </a>
            </div>
        </div>
        <div class="card-body p-4">
            <partial name="_NotificationPartial" />

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label fw-bold"></label>
                        <div class="form-control-plaintext">@Model.UserName</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold"></label>
                        <div class="form-control-plaintext">@Model.Email</div>
                    </div>
                </div>
            </div>

            <form method="post" asp-action="UpdateRole" asp-controller="User">
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="UserName" />
                <input type="hidden" asp-for="Email" />

                <div class="mb-4">
                    <label asp-for="SelectedRoles" class="form-label fw-bold">Assign Roles</label>
                    <div class="row g-3">
                        @foreach (var role in Model.AllRoles)
                        {
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox"
                                           name="SelectedRoles" value="@role.Value"
                                           id="role_@role.Value" @(role.Selected ? "checked" : "") />
                                    <label class="form-check-label" for="role_@role.Value">
                                        @role.Text
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div> 